<!-- Default.cshtml -->

@model List<Product>


<div class="best_sellers">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>Best Sellers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product_slider_container">
                    <div class="owl-carousel owl-theme product_slider">
                        @foreach (var item in Model)
                        {
                            string[] imageUrls = item.Image?.Split(';');

                            if (item.IsSale == true)
                            {
                                <!-- Slide 1 -->
                                <div class="owl-item product_slider_item">
                                    <div class="product-item">
                                        <div class="product discount">
                                            <div class="product_image">
                                                <img style="height:221px;" src="@imageUrls[0]" alt="">
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$@(item.Price -item.PriceSale)</span></div>
                                            <div class="product_info">
                                                <h6 class="product_name"><a href="/chi-tiet/@item.Id">@item.Title</a></h6>
                                                <div class="product_price">$@item.PriceSale<span>$@item.Price</span></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }


                            else
                            {
                                <div class="owl-item product_slider_item">
                                    <div class="product-item">
                                        <div class="product discount">
                                            <div class="product_image">
                                                <img src="@imageUrls[0]" alt="">
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            <div class="product_info">
                                                <h6 class="product_name"><a href="/chi-tiet/@item.Id">@item.Title</a></h6>
                                                <div class="product_price">$@item.PriceSale</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }



                    </div>
                    <!-- Slider Navigation -->
                    <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    </div>
                    <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                        <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>