@model ElectroMVC.Models.OrderViewModel
<form id="checkoutForm" asp-controller="ShoppingCart" asp-action="CheckOut1" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <h3>Thông tin khách hàng</h3>
    <div class="form-group">
        <label>Họ tên khách hàng</label>
        <input type="text" name="Order.CustomerName" class="form-control" autocomplete="off" />
        <span asp-validation-for="Order.CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số điện thoại</label>
        <input type="text" name="Order.Phone" class="form-control" autocomplete="off" />
        <span asp-validation-for="Order.Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Địa chỉ </label>
        <input type="text" name="Order.Address" class="form-control" autocomplete="off" />
        <span asp-validation-for="Order.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" name="Order.Email" class="form-control" autocomplete="off" />
        <span asp-validation-for="Order.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hình thức thanh toán</label>
        <select name="Order.TypePayment" class="form-control" id="drTypePayment">
            <option value="1" selected>COD</option>
            <option value="2">Chuyển khoản</option>
        </select>
        <span asp-validation-for="Order.TypePayment" class="text-danger"></span>
    </div>

    <div class="form-group" id="load_form_payment" style="display:none;">
        <h4><label>Chọn phương thức thanh toán:</label><br /></h4>
        <h5 class="mb-3">Cách 1: Chuyển hướng sang VNPAY chọn phương thức thanh toán</h5>
        <label><input type="radio" name="TypePaymentVN" value="0" checked />Cổng thanh toán VNPAYQR</label>
        <h5 class="mb-3">Cách 2: Tách phương thức thanh toán tại site của Merchant</h5>
        <label><input type="radio" name="TypePaymentVN" value="1" />Thanh toán qua ứng dụng hỗ trợ VNPAYQR</label><br />
        <label><input type="radio" name="TypePaymentVN" value="2" />ATM tài khoản ngân hàng nội địa</label><br />
        <label><input type="radio" name="TypePaymentVN" value="3" />Thanh toán qua thẻ quốc tế</label><br />

    </div>

    <div class="form-group" id="load_send"></div>
        <div class="form-group">
            <input type="submit" id="btnCheckOut" value="Đặt hàng" class="btn btn-block btn-success" />
        </div>

</form>


