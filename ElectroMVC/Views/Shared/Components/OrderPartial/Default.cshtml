@model IEnumerable<ElectroMVC.Models.OrderViewModel>
@if (Model != null && Model.Any())
{
        var i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.ProductName</td>
                    <td>$@item.OrderDetail.Price</td>
                    <td>@item.OrderDetail.Quantity</td>
                    <td>$@(item.OrderDetail.Quantity * item.OrderDetail.Price)</td>
                </tr>
                    i++;
                }
        </tbody>
    </table>
    
}