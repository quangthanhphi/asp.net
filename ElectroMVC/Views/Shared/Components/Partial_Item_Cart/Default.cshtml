@model IEnumerable<ElectroMVC.Models.ShoppingCartItem>
<table class="table">
    <tr class="text-center">
        <th>STT</th>
        <th>Ảnh sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Danh mục</th>
        <th>Giá</th>
        <th style="width:100px;">Số lượng</th>
        <th>Thành tiền</th>
        <th style="width:200px;"></th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 0;
        var tongtien = Decimal.Zero;
        foreach (var item in Model)
        {
            tongtien += item.TotalPrice;
            string[] imageUrls = item.ProductImg?.Split(';');
            <tr class="text-center" id="trow_@item.ProductId">
                <td>@(i+1)</td>
                <td><img src="@imageUrls[0]" style="height:100px" /></td>
                <td>
                    <a href="/chi-tiet/@item.ProductId">@item.ProductName</a>
                </td>
                <td>@item.CategoryName</td>
                <td>$@item.Price</td>
                <td><input class="form-control soluong" data-id="@item.ProductId" style="color:#000;" id="Quantity_@item.ProductId" type="number" value="@item.Quantity" /></td>
                <td class="text-danger"><span>$@item.TotalPrice</span></td>
                <td>
                    <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                    @*<a href="#" data-id="@item.ProductId" class="btn btn-sm btn-success btnUpdate">Cập nhật</a>*@
                </td>
            </tr>
            i++;
        }
        <tr>
            <th class="text-right" colspan="6">Tổng: </th>
            <th class="text-center text-danger">$@tongtien</th>
            <th></th>
        </tr>
        <tr>
            <th class="text-right" colspan="6">  </th>
            <th></th>
            <th class="text-center">
                <a href="#" class="btn btn-danger btnDeleteAll">Xóa</a>
                <a href="/thanh-toan" class="btn btn-success">Thanh toán</a>
            </th>
        </tr>

    }
    else
    {
        <tr>
            <td colspan="7">Không có sản phẩm trong giỏ hàng. Quay lại trang <a href="san-pham">sản phẩm</a> </td>
        </tr>
    }

</table>
